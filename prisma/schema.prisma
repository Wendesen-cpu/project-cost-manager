// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "sqlite"
  url      = "file:../dev.db"
}

model Employee {
  id             String    @id @default(uuid())
  firstName      String
  lastName       String
  email          String    @unique
  password       String
  monthlyCost    Float
  vacationDays   Int       @default(0) // Remaining vacation days
  role           String    @default("EMPLOYEE") // ADMIN or EMPLOYEE
  
  projects       ProjectAssignment[]
  workLogs       WorkLog[]
  vacations      VacationLog[]
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  status         String    @default("PENDING") // PENDING, APPROVED
  approvedById   String?
  approvedBy     Admin?    @relation("AdminApprovals", fields: [approvedById], references: [id])
}

model Project {
  id                  String    @id @default(uuid())
  name                String
  description         String?
  startDate           DateTime
  endDate             DateTime?
  status              String    @default("ACTIVE") // ACTIVE, COMPLETED, ARCHIVED
  
  paymentType         String    @default("FIXED") // FIXED, HOURLY
  totalPrice          Float?    // If FIXED
  hourlyRate          Float?    // If HOURLY
  
  fixedMonthlyCosts   Float     @default(0)
  fixedTotalCosts     Float     @default(0)
  
  members             ProjectAssignment[]
  workLogs            WorkLog[]
  
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model ProjectAssignment {
  id          String    @id @default(uuid())
  employeeId  String
  projectId   String
  employee    Employee  @relation(fields: [employeeId], references: [id])
  project     Project   @relation(fields: [projectId], references: [id])
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([employeeId, projectId])
}

model WorkLog {
  id          String    @id @default(uuid())
  employeeId  String
  projectId   String
  date        DateTime
  hours       Float
  
  employee    Employee  @relation(fields: [employeeId], references: [id])
  project     Project   @relation(fields: [projectId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model VacationLog {
  id          String    @id @default(uuid())
  employeeId  String
  date        DateTime
  
  employee    Employee  @relation(fields: [employeeId], references: [id])

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@unique([employeeId, date])
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("ADMIN") // ADMIN, SUPER_ADMIN
  status    String   @default("PENDING") // PENDING, APPROVED
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  approvedEmployees Employee[] @relation("AdminApprovals")
}

model Otp {
  id        String   @id @default(uuid())
  email     String
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
